<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
    </style>

    <style name="ExpenseTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <style name="ExpenseSeekBar" parent="android:Widget.SeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_gravity">center_vertical|fill_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ExpenseEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">2</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:text">@string/zeroCurrency</item>
    </style>
    <style name="ExpenseRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
